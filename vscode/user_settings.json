{
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": true,
    "window.titleBarStyle": "custom",
    "window.customTitleBarVisibility": "auto",
    "workbench.iconTheme": "catppuccin-perfect-dracula",
    "workbench.colorTheme": "Atom One Dark",
    "workbench.sideBar.location": "right",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.tree.indent": 15,
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#231942",
        "activityBar.activeBackground": "#372767",
        "titleBar.inactiveBackground": "#23194299",
        "activityBarBadge.background": "#a2563d",
        "statusBarItem.hoverBackground": "#372767",
        "statusBarItem.remoteBackground": "#231942",
        "activityBar.background": "#372767",
        "statusBar.background": "#231942",
        "commandCenter.border": "#372767",
        "activityBar.foreground": "#8EDF5F",
        "activityBar.inactiveForeground": "#79be5183",
        "activityBarBadge.foreground": "#e7e7e7",
        "sash.hoverBorder": "#372767",
        "statusBar.foreground": "#8EDF5F",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeForeground": "#8EDF5F",
        "titleBar.inactiveForeground": "#ff000099",
        "editor.background": "#1C2026",
        "editor.foreground": "#8EDF5F",
        "sideBar.background": "#1c0029",
        "tab.activeBackground": "#4C1C7F",
        "tab.inactiveBackground": "#1C0029",
        "editor.selectionBackground": "#c300ff3d",
        "terminal.background": "#190020",
        "terminal.foreground": "#8EDF5F",
        "button.background": "#190020",
        "button.foreground": "#8EDF5F",
        "dropdown.background": "#2c0038",
        "dropdown.foreground": "#8EDF5F"
    },
    "terminal.integrated.fontFamily": "\"Fira Code\"",
    "numberedBookmarks.navigateThroughAllFiles": "replace",
    "files.autoSave": "afterDelay",
    "editor.minimap.enabled": false,
    "editor.guides.bracketPairs": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.fontFamily": "'FiraCode Nerd Font'",
    "editor.fontSize": 15,
    "editor.fontWeight": 600,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.formatOnSave": false,
    "editor.fontLigatures": true,
    "editor.lineHeight": 1.6,
    "editor.cursorBlinking": "expand",
    "editor.codeActions.triggerOnFocusChange": true,
    "[php]": {
        "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?"
    },
    "diffEditor.maxComputationTime": 0,
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.maxFileSize": 0,
    "git.replaceTagsWhenPull": true,
    "git.autofetch": true,
    "git.pruneOnFetch": true,
    "git.postCommitCommand": "sync",
    "git.confirmSync": false,
    "git.followTagsWhenSync": true,
    "git.suggestSmartCommit": false,
    "git.autoRepositoryDetection": false,
    "git.openRepositoryInParentFolders": "never",
    "gitlens.views.repositories.includeWorkingTree": true,
    "gitlens.views.remotes.files.compact": false,
    "gitlens.views.branches.avatars": false,
    "gitlens.views.branches.files.compact": false,
    "gitlens.views.branches.files.layout": "list",
    "gitlens.graph.scrollMarkers.enabled": false,
    "gitlens.graph.showDetailsView": false,
    "gitlens.graph.showGhostRefsOnRowHover": false,
    "gitlens.graph.highlightRowsOnRefHover": false,
    "gitlens.graph.showUpstreamStatus": false,
    "gitlens.graph.pullRequests.enabled": false,
    "gitlens.graph.avatars": false,
    "gitlens.advanced.messages": {
        "suppressCreatePullRequestPrompt": true
    },
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "stash-push:command",
        "switch:command"
    ],
    "githubPullRequests.createOnPublishBranch": "never",
    "githubPullRequests.fileListLayout": "tree",
    "githubPullRequests.pullBranch": "never",
    "githubPullRequests.queries": [
        {
            "label": "Review PR - Validar Origem Base",
            "query": "is:pr is:open review-requested:${user} -base:develop"
        },
        {
            "label": "Meu review Pendente - Develop",
            "query": "is:pr is:open base:develop review-requested:${user}"
        },        
        {
            "label": "Review PR - Base Develop",
            "query": "is:pr is:closed"
        },
        {
            "label": "Criado por mim",
            "query": "is:open author:${user}"
        }
    ],
}
